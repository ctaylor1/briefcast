# End-user Docker runtime settings used by docker-compose.yml

# Image/tag to pull from GHCR.
BRIEFCAST_IMAGE=ghcr.io/ctaylor1/briefcast:latest

# Host paths for persistent data.
HOST_CONFIG_DIR=./config
HOST_ASSETS_DIR=./assets

# Published host port.
HOST_PORT=8080

# Scheduler interval in minutes.
CHECK_FREQUENCY=15

# Optional basic auth password (username is always "briefcast").
PASSWORD=

# Logging.
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout,/config/logs/briefcast.log

# Optional ownership mapping for NAS/Linux hosts.
PUID=1000
PGID=1000

# Optional DB override (default is sqlite:///config/briefcast.db).
DATABASE_URL=sqlite:///config/briefcast.db

# Optional DB override (Postgres example):
# DB_DRIVER=postgres
# BRIEFCAST_DB_PASSWORD=change-me
# DATABASE_URL=postgres://operator:${BRIEFCAST_DB_PASSWORD}@192.168.1.2:5432/briefcast?sslmode=disable

# WhisperX simple toggles.
WHISPERX_ENABLED=false
WHISPERX_DIARIZATION=false
WHISPERX_CHECK_FREQUENCY=30

# Optional advanced WhisperX overrides file.
# Create .env.whisperx from whisperx.env.example when needed.
WHISPERX_ENV_FILE=.env.whisperx
